<h1><%= params[:category] %></h1>

<% if @books.count == 0 %>

  <h1>There is no Category</h1>

<% else %>

  <% @books.each do |book| %>
    <div class="cal-md-3">
      <a href="/books/<%= book.id %>">
        <%= image_tag book.book_image.url(:book_index), class: "book"%>
      </a>
    </div>
  <% end %>

<% end %>

